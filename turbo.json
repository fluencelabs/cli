{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["bin/**", "src/**", "package.json", "tsconfig.json"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "on-each-commit": {
      "inputs": ["eslint.config.js"],
      "dependsOn": ["^build", "build"]
    },
    "install-yarn-dependencies": {
      "inputs": [
        "../../cli/package.json",
        "../../cli/yarn.lock",
        "../../cli/.yarnrc.yml"
      ],
      "outputs": ["../../cli/node_modules/**"]
    },
    "install-npm-dependencies": {
      "inputs": [
        "../../cli/src/cli-aqua-dependencies/package.json",
        "../../cli/src/cli-aqua-dependencies/package-lock.json"
      ],
      "outputs": ["../../cli/src/cli-aqua-dependencies/node_modules/**"]
    },
    "before-build": {
      "dependsOn": [
        "install-yarn-dependencies",
        "install-npm-dependencies",
        "@repo/cli-connector#build"
      ],
      "inputs": ["../../cli/src/beforeBuild.ts", "../../cli/src/versions.json"],
      "outputs": [
        "../../cli/src/lib/compiled-aqua/**",
        "../../cli/src/lib/compiled-aqua-with-tracing/**",
        "../../cli/src/aqua-dependencies/**",
        "../../cli/src/versions/**",
        "../../cli/src/common.ts"
      ]
    },
    "build-cli": {
      "dependsOn": ["before-build"],
      "inputs": [
        "../../cli/bin/**",
        "../../cli/src/**",
        "!cli/src/cli-aqua-dependencies/node_modules/**",
        "!cli/src/lib/compiled-aqua/**",
        "!cli/src/lib/compiled-aqua-with-tracing/**",
        "!cli/src/aqua-dependencies/**",
        "!cli/src/versions/**",
        "!cli/src/common.ts",
        "../../cli/package.json",
        "../../cli/tsconfig.json"
      ],
      "outputs": ["../../cli/dist/**"]
    },
    "on-each-commit-cli": {
      "inputs": [],
      "dependsOn": ["build-cli"]
    },
    "pack-ci": {
      "inputs": [],
      "outputs": ["../../cli/dist/**"],
      "dependsOn": ["build-cli"]
    },
    "pack-linux-x64": {
      "inputs": [],
      "outputs": ["../../cli/dist/**"],
      "dependsOn": ["build-cli"]
    },
    "pack-darwin-x64": {
      "inputs": [],
      "outputs": ["../../cli/dist/**"],
      "dependsOn": ["build-cli"]
    },
    "pack-darwin-arm64": {
      "inputs": [],
      "outputs": ["../../cli/dist/**"],
      "dependsOn": ["build-cli"]
    },
    "pack-win32-x64": {
      "outputs": ["../../cli/dist/**"],
      "inputs": ["nsis/**"],
      "dependsOn": ["build-cli"]
    }
  }
}
