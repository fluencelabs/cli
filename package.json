{
  "name": "@fluencelabs/cli",
  "version": "0.0.2",
  "description": "CLI for working with Fluence network",
  "author": "Fluence Labs",
  "bin": {
    "fluence": "bin/run"
  },
  "homepage": "https://github.com/fluencelabs/fluence-cli",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fluencelabs/fluence-cli.git"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "mocha-test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "test": "npm run mocha-test",
    "posttest": "npm run lint",
    "prepare": "husky install",
    "check": "npm run build && npm run mocha-test",
    "pre-commit": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@fluencelabs/fluence": "^0.23.0",
    "@fluencelabs/fluence-network-environment": "^1.0.13",
    "@oclif/color": "^1.0.1",
    "@oclif/core": "^1",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-autocomplete": "^1.2.0",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-not-found": "^2.3.1",
    "@oclif/plugin-plugins": "^2.0.1",
    "@oclif/plugin-update": "^3.0.0",
    "@oclif/plugin-warn-if-update-available": "^2.0.4",
    "ajv": "^8.11.0",
    "inquirer": "^8.2.2",
    "platform": "^1.3.6",
    "yaml": "^2.0.1",
    "yaml-diff-patch": "^1.2.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@tsconfig/node16-strictest": "^1.0.1",
    "@types/chai": "^4",
    "@types/inquirer": "^8.2.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "@types/platform": "^1.3.4",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-license-header": "^0.4.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "globby": "^11",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^9",
    "oclif": "^3",
    "prettier": "^2.6.2",
    "shx": "^0.3.3",
    "ts-node": "^10.8.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "oclif": {
    "bin": "fluence",
    "dirname": "fluence",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-not-found",
      "@oclif/plugin-update",
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "topics": {},
    "hooks": {
      "init": "./src/hooks/init/init"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/fluencelabs/fluence-cli/issues"
  },
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts",
  "eslintConfig": {
    "extends": [
      "oclif",
      "oclif-typescript",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "plugins": [
      "import",
      "license-header",
      "unused-imports"
    ],
    "rules": {
      "no-plusplus": "error",
      "operator-assignment": [
        "error",
        "never"
      ],
      "dot-notation": [
        "error",
        {
          "allowPattern": "^[a-zA-Z]+(_[a-zA-Z]+)+$"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": false,
          "allowTypedFunctionExpressions": false,
          "allowHigherOrderFunctions": false,
          "allowDirectConstAssertionInArrowFunctions": false,
          "allowConciseArrowFunctionExpressionsStartingWithVoid": false
        }
      ],
      "@typescript-eslint/explicit-member-accessibility": [
        "error",
        {
          "accessibility": "no-public"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": [
        "error",
        {
          "allowString": false,
          "allowNumber": false,
          "allowNullableObject": false,
          "allowNullableBoolean": false,
          "allowNullableString": false,
          "allowNullableNumber": false,
          "allowAny": false
        }
      ],
      "@typescript-eslint/consistent-type-assertions": [
        "error",
        {
          "assertionStyle": "never"
        }
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "unused-imports/no-unused-imports": "error",
      "license-header/header": [
        "error",
        "./resources/license-header.js"
      ],
      "brace-style": "off",
      "padding-line-between-statements": "off",
      "lines-between-class-members": "off",
      "padded-blocks": "off",
      "indent": "off",
      "arrow-parens": "off",
      "quotes": "off",
      "comma-dangle": "off",
      "semi": "off",
      "operator-linebreak": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/consistent-destructuring": "off",
      "unicorn/no-useless-undefined": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./test/tsconfig.eslint.json"
          ]
        }
      }
    ]
  },
  "eslintIgnore": [
    "/dist"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "directories": {
    "test": "test"
  }
}
