aqua Main

import "@fluencelabs/aqua-lib/builtin.aqua"

use "hosts.aqua"
import "services.aqua"

export runDeployedServices

data Answer:
    answer: string
    peer: string

func runDeployedServices() -> *Answer:
    hosts <- Hosts.get()
    installationSpells = hosts.defaultWorker!.installationSpells
    answers: *Answer
    for s <- installationSpells:
        on s.workerId via s.hostId:
            answer <- NewService2.greeting("fluence")
            answers <<- Answer(answer=answer, peer=s.hostId)

    <- answers
